<?xml version="1.0"?>
<wsp>
  <collection>
    <id>gcs</id>
    <rdfId>http://wsp.normdata.rdf/GriechischChristlichSchriftsteller</rdfId>
    <name>Die Griechischen Christlichen Schriftsteller</name>
    <db>
      <type>mysql</type>
      <name>filmdb</name>
      <xmlDump>
        <sql>
SELECT 
 id,
 autor as creator,
 werktitel as title
FROM 
 filme
        </sql>
      </xmlDump>
      <mainResourcesTable>
        <name>filme</name>
        <idField>id</idField>
        <field>
          <dc>creator</dc>
          <db>creator</db>
        </field>
        <field>
          <dc>title</dc>
          <db>title</db>
        </field>
      </mainResourcesTable>
      <webId>
        <preStr>http://gcs.bbaw.de/filmdb/film.php?id=</preStr>
      </webId>
    </db>
    <url>	
      <webBaseUrl>http://gcs.bbaw.de</webBaseUrl>
      <!-- Homepage -->
      <dataUrl>http://gcs.bbaw.de</dataUrl>
      <!-- weitere Texte -->
      <dataUrl>http://telota.bbaw.de/gcs</dataUrl>
      <!-- GCS-Filmdatenbank: Homepage -->
      <dataUrl>http://gcs.bbaw.de/filmdb/</dataUrl>
      <!-- XML-Texte -->
      <dataUrl>http://telota.bbaw.de/gcs/index.php?rubrik=einfuehrung</dataUrl>
      <dataUrl>http://telota.bbaw.de/exist/rest/db/gcs/text_d_1.xml</dataUrl>
      <dataUrl>http://telota.bbaw.de/exist/rest/db/gcs/text_g_1.xml</dataUrl>
      <dataUrl>http://telota.bbaw.de/exist/rest/db/gcs/app_d_1.xml</dataUrl>
      <dataUrl>http://telota.bbaw.de/exist/rest/db/gcs/app_g_1.xml</dataUrl>
    </url>
    <languages>ger, grc</languages>
    <mainLanguage>ger</mainLanguage>
    <formats>
      <format>xml</format>
      <format>html</format>
      <format>php</format>
      <format>pdf</format>
    </formats>
    <xqueries>
      <!-- hack: to generate the same static webUri to all xml documents -->
      <xquery>
        <name>webId</name>
        <code>concat('', 'edition')</code>
        <preStr>http://telota.bbaw.de/gcs/index.php?rubrik=</preStr>
      </xquery>
    </xqueries>
  </collection>
</wsp>