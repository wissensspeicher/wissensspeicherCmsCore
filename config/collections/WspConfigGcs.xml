<?xml version="1.0"?>
<wsp>
  <collection>
    <id>gcs</id>
    <rdfId>http://wsp.normdata.rdf/GriechischChristlichSchriftsteller</rdfId>
    <name>Die Griechischen Christlichen Schriftsteller</name>
    <url>	
      <webBaseUrl>http://gcs.bbaw.de</webBaseUrl>
      <!-- Homepage -->
      <dataUrl>http://gcs.bbaw.de</dataUrl>
      <!-- weitere Texte -->
      <dataUrl>http://telota.bbaw.de/gcs</dataUrl>
      <!-- GCS-Filmdatenbank: Homepage -->
      <dataUrl>http://gcs.bbaw.de/filmdb/</dataUrl>
      <!-- XML-Texte -->
      <dataUrl type="eXistDir">http://telota.bbaw.de/exist/rest/db/gcs/</dataUrl>
      <exclude>scripts</exclude>
    </url>
    <languages>ger, grc</languages>
    <mainLanguage>grc</mainLanguage>
    <formats>
      <format>xml</format>
      <format>html</format>
      <format>php</format>
      <format>pdf</format>
    </formats>
    <db>
      <type>mysql</type>
      <name>gcs_filmdb</name>
      <xmlDump>
        <sql>
SELECT 
 id,
 autor as creator,
 werktitel as title
FROM 
 filme
        </sql>
        <fileName>config/mdsystem/db-resources/gcs-filmdb.xml</fileName>
      </xmlDump>
      <mainResourcesTable>
        <name>filme</name>
        <idField>id</idField>
        <field>
          <dc>creator</dc>
          <db>creator</db>
        </field>
        <field>
          <dc>title</dc>
          <db>title</db>
        </field>
      </mainResourcesTable>
      <webId>
        <preStr>http://gcs.bbaw.de/filmdb/film.php?id=</preStr>
      </webId>
    </db>
  </collection>
</wsp>