<?xml version="1.0" encoding="UTF-8"?>
<wsp>
  <collection>
    <id>glossga</id>
    <rdfId>http://wsp.normdata.rdf/GlossariumGraecoArabicum</rdfId>
    <name>Glossarium Gr√¶co-Arabicum</name>
    <url>
    	<webBaseUrl>http://telota.bbaw.de/glossga</webBaseUrl>
      <dataUrl>http://telota.bbaw.de/glossga</dataUrl>
      <dataUrl>http://telota.bbaw.de/glossga/about.php</dataUrl>
    </url>
    <mainLanguage>ger</mainLanguage>
    <languages>ger, grc, ara</languages>
    <formats>
      <format>html</format>
    </formats> 
    <db>
      <type>mysql</type>
      <name>glossary</name>
      <xmlDump>
        <sql>
SELECT 
 word_id as id,
 concat(gr_lexeme, ' | ', ar_lexeme) as title,
 'grc' as language,
 concat('Lexeme (greek): ', gr_lexeme, '\nPart of speech (greek): ', gr_pos, '\nExpression (greek): ', gr_expression, '\nAnnotation (greek): ', gr_annotation, '\nQuotation (greek): ', gr_quotation, '\nReference (greek): ', gr_reference, 'Lexeme (arabic): ', ar_lexeme, '\nRoot (arabic): ', ar_root_1, '\nPart of speech (arabic): ', ar_pos, '\nExpression (arabic): ', ar_expression, '\nAnnotation (arabic): ', ar_annotation, '\nQuotation (arabic): ', ar_quotation) as abstract
FROM 
 glossary
        </sql>
      </xmlDump>
      <mainResourcesTable>
        <name>glossary</name>
        <idField>id</idField>
        <field>
          <dc>title</dc>
          <db>title</db>
        </field>
        <field>
          <dc>language</dc>
          <db>language</db>
        </field>
        <field>
          <dc>abstract</dc>
          <db>abstract</db>
        </field>
      </mainResourcesTable>
      <webId>
        <preStr>http://telota.bbaw.de/glossga/glossary.php?id=</preStr>
      </webId>
    </db>
    <db>
      <type>mysql</type>
      <name>sources</name>
      <xmlDump>
        <sql>
SELECT 
 source_id as id,
 name as title,
 'ger' as language,
 description as abstract
FROM 
 sources
        </sql>
      </xmlDump>
      <mainResourcesTable>
        <name>sources</name>
        <idField>id</idField>
        <field>
          <dc>title</dc>
          <db>title</db>
        </field>
        <field>
          <dc>language</dc>
          <db>language</db>
        </field>
        <field>
          <dc>abstract</dc>
          <db>abstract</db>
        </field>
      </mainResourcesTable>
      <webId>
        <preStr>http://telota.bbaw.de/glossga/sources.php?id=</preStr>
      </webId>
    </db>
  </collection>
</wsp>
