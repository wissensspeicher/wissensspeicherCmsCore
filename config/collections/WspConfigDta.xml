<?xml version="1.0"?>
<wsp>
  <collection>
    <id>dta</id>
    <rdfId>http://wsp.normdata.rdf/DTA</rdfId>
    <name>Deutsches Textarchiv</name>
    <!-- OAI-PMH -->
    <db>
      <type>oai</type>
      <name>dta</name>
      <xmlDump>
        <url>http://fedora.dwds.de:8088/oaiprovider/oai</url>
        <set>dta</set>
        <!-- dwds sets: dta;dwds;WebLichtWebServices;dingler -->
      </xmlDump>
      <mainResourcesTable>
        <name>records</name>
        <idField>identifier</idField>
        <field>
          <dc>subject</dc>
          <db>dc:subject</db>
        </field>
      </mainResourcesTable>
      <webId>
        <preStr>http://fedora.deutschestextarchiv.de:8088/fedora/objects/</preStr>
        <afterStr>/datastreams/xml/content</afterStr>
      </webId>
    </db>
    <url>
      <webBaseUrl>http://www.deutschestextarchiv.de/</webBaseUrl>
      <!-- Homepage -->
      <dataUrl>http://www.deutschestextarchiv.de/</dataUrl>
      <!-- diverses -->
      <dataUrl>http://www.deutschestextarchiv.de/doku/ueberblick</dataUrl>
      <dataUrl>http://www.deutschestextarchiv.de/doku</dataUrl>
      <dataUrl>http://www.deutschestextarchiv.de/doku/leitlinien</dataUrl>
      <dataUrl>http://www.deutschestextarchiv.de/doku/software</dataUrl>
      <dataUrl>http://www.deutschestextarchiv.de/documentation/resources/</dataUrl>
    </url>
    <mainLanguage>ger</mainLanguage>
    <services>
      <service>
        <id>queryResource</id>
        <host>deutschestextarchiv.de</host>      
        <name>/search/ddc/search</name>
        <properties>
          <property>
            <name>queryLanguage</name>
            <value>ddc</value>
          </property>
        </properties>
        <parameters>
          <param>
            <name>query</name>
            <value>q</value>
          </param>
          <param>
            <name>resource</name>
            <value>book</value>
          </param>
        </parameters>
      </service>
    </services>
    <xqueries>
      <xquery>
        <name>webId</name>
        <code>//*:idno[@type="URLWeb"]/text()</code>
      </xquery>
    </xqueries>
  </collection>
</wsp>