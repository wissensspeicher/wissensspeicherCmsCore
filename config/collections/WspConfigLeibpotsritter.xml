<?xml version="1.0"?>
<wsp>
  <collection>
    <id>leibpotsritter</id>
    <rdfId>http://wsp.normdata.rdf/LeibnizEditionPotsdam/RitterKatalog</rdfId>
    <name>Leibniz-Edition Potsdam: Ritter Katalog</name>
    <url>
    	<webBaseUrl>http://ritter.bbaw.de</webBaseUrl>
      <dataUrl>http://ritter.bbaw.de</dataUrl>
    </url>
    <languages>ger,lat,eng</languages>
    <mainLanguage>ger</mainLanguage>
    <formats>
      <format>html</format>
      <format>pdf</format>
    </formats>
    <db>
      <type>mysql</type>
      <name>ritter</name>
      <xmlDump>
        <sql>
SET @row_number:=0;
SELECT @row_number:=@row_number+1 as id,
 IF(STRCMP(absender, 'L') = 0, 'Leibniz, Gottfried Wilhelm', absender) as creator,
 titel as title,
 ort as publisher,
 IF((CHAR_LENGTH(jjjjmmtt) = 8), CONCAT(SUBSTRING(jjjjmmtt, 1, 4), '-', SUBSTRING(jjjjmmtt, 5, 2), '-', SUBSTRING(jjjjmmtt, 7, 2), 'T00:00:00.000Z'), '') as pub_date,
 incipit as abstract
FROM 
  ritter
ORDER BY
  kat_nr
        </sql>
      </xmlDump>
      <mainResourcesTable>
        <name>ritter</name>
        <idField>id</idField>
        <field>
          <dc>creator</dc>
          <db>creator</db>
        </field>
        <field>
          <dc>title</dc>
          <db>title</db>
        </field>
        <field>
          <dc>publisher</dc>
          <db>publisher</db>
        </field>
        <field>
          <dc>date</dc>
          <db>pub_date</db>
        </field>
        <field>
          <dc>abstract</dc>
          <db>abstract</db>
        </field>
      </mainResourcesTable>
      <webId>
        <preStr>http://ritter.bbaw.de/ritter/Gesamtkatalog/Datenblatt/datenblatt?sort=KAT_NR&amp;anzeige:int=</preStr>
      </webId>
    </db>
  </collection>
