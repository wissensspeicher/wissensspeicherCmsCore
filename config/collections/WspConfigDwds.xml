<?xml version="1.0" encoding="UTF-8"?>
<wsp>
  <collection>
    <id>dwds</id>
    <rdfId>http://wsp.normdata.rdf/DWDS</rdfId>
    <name>Digitales Wörterbuch der deutschen Sprache (DWDS)</name>
    <!-- OAI-PMH -->
    <db>
      <type>oai</type>
      <name>dwds</name>
      <xmlDump>
        <url>http://fedora.dwds.de:8088/oaiprovider/oai</url>
        <set>dwds</set>
        <fileName>config/mdsystem/db-resources/dwds.xml</fileName>
      </xmlDump>
      <mainResourcesTable>
        <name>records</name>
        <idField>identifier</idField>
        <field>
          <dc>creator</dc>
          <db>dc:creator</db>
        </field>
        <field>
          <dc>title</dc>
          <db>dc:title</db>
        </field>
        <field>
          <dc>publisher</dc>
          <db>dc:publisher</db>
        </field>
        <field>
          <dc>date</dc>
          <db>dc:date</db>
        </field>
        <field>
          <dc>subject</dc>
          <db>dc:subject</db>
        </field>
        <field>
          <dc>language</dc>
          <db>dc:language</db>
        </field>
      </mainResourcesTable>
      <webId>
        <preStr>http://fedora.deutschestextarchiv.de:8088/fedora/objects/</preStr>
        <afterStr>/datastreams/cmdi/content</afterStr>
      </webId>
    </db>
    <db>
      <type>oai</type>
      <name>dwds-dingler</name>
      <xmlDump>
        <url>http://fedora.dwds.de:8088/oaiprovider/oai</url>
        <set>dingler</set>
        <fileName>config/mdsystem/db-resources/dwds-dingler.xml</fileName>
      </xmlDump>
      <mainResourcesTable>
        <name>records</name>
        <idField>identifier</idField>
        <field>
          <dc>creator</dc>
          <db>dc:creator</db>
        </field>
        <field>
          <dc>title</dc>
          <db>dc:title</db>
        </field>
        <field>
          <dc>publisher</dc>
          <db>dc:publisher</db>
        </field>
        <field>
          <dc>date</dc>
          <db>dc:date</db>
        </field>
        <field>
          <dc>subject</dc>
          <db>dc:subject</db>
        </field>
        <field>
          <dc>language</dc>
          <db>dc:language</db>
        </field>
      </mainResourcesTable>
      <webId>
        <preStr>http://fedora.deutschestextarchiv.de:8088/fedora/objects/</preStr>
        <afterStr>/datastreams/cmdi/content</afterStr>
      </webId>
    </db>
    <url>
