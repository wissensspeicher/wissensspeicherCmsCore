<?xml version="1.0"?>
<wsp>
  <collection>
    <id>ig</id>
    <rdfId>http://wsp.normdata.rdf/InscriptionesGraecae</rdfId>
    <name>Inscriptiones Graecae</name>
    <url>
      <webBaseUrl>http://ig.bbaw.de</webBaseUrl>
      <!-- HTML-Texte -->
      <dataUrl>http://ig.bbaw.de</dataUrl>
      <dataUrl>http://ig.bbaw.de/ueberblick</dataUrl>
      <dataUrl>http://telota.bbaw.de/ig</dataUrl>
      <!-- XML-Texte -->
      <dataUrl type="eXistDir">http://telota.bbaw.de/exist/rest/db/ig/texts/</dataUrl>
      <exclude>pages</exclude>
      <exclude>scripts</exclude>
      <exclude>svg</exclude>
      <exclude>users</exclude>
      <exclude>backup</exclude>
    </url>
    <languages>ger, grc</languages>
    <mainLanguage>grc</mainLanguage>
    <formats>
      <format>xml</format>
    </formats>
    <fields>
      <field>place</field>
      <field>location</field>
      <field>p</field>
      <field>s</field>
      <field>head</field>
    </fields>
    <xqueries>
      <xquery>
        <name>webId</name>
        <code>//*:idno[@type="signature"]/text()</code>
        <preStr>http://telota.bbaw.de/ig/</preStr>
      </xquery>
    </xqueries>
    <exclude/>
    <update>false</update>
  </collection>
</wsp>